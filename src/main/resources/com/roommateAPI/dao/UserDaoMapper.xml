<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ian.resttest.persistance.PostMapper">

    <select id="selectUserByEmail" resultType="com.roommateAPI.models.UserModel">
        SELECT * FROM Users WHERE email = #{email};
    </select>

    <select id="getPost" resultType="com.ian.resttest.domain.Post" parameterType="int">
        SELECT
        *
        FROM posts
        WHERE id = #{postId}
    </select>

    <update id="updatePost" parameterType="com.ian.resttest.domain.Post">
        UPDATE posts
        <set>
            <if test="author != null"> author = #{author}, </if>
            <if test="content != null"> content = #{content} </if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>